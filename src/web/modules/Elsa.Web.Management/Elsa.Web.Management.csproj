        <PackageReference Include="OrchardCore.Settings" Version="1.0.0-beta3-70919" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Elsa.Web.Components\Elsa.Web.Components.csproj" />
    </ItemGroup>

