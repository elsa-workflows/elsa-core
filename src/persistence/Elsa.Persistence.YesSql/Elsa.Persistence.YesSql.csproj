        </Description>     
        <PackageTags>elsa, workflows, orchard</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="YesSql.Core" Version="3.0.6" />
      <PackageReference Include="YesSql.Provider.MySql" Version="3.0.6" />
      <PackageReference Include="YesSql.Provider.PostgreSql" Version="3.0.6" />
      <PackageReference Include="YesSql.Provider.Sqlite" Version="3.0.6" />
      <PackageReference Include="YesSql.Provider.SqlServer" Version="3.0.6" />
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\..\core\Elsa.Core\Elsa.Core.csproj" />
    </ItemGroup>

</Project>
